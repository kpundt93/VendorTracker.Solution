@using VendorTracker.Models;

<h1>Vendors</h1>
<h3>Click on a vendor to view their orders.</h3>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added!</h3>
}
<ul>
  @foreach (Vendor vendor in Model)
  {
    <li><a href="/vendors/@vendor.Id">@vendor.Name</a></li>
  }
</ul>

<a href="/vendor/new">Add New Vendor</a><br>
<a href="/">Home</a>

@using VendorTracker.Models;
@{
  Layout = "_Layout";
}

<h1>Vendors</h1>
<h2>Click on a vendor to view their orders.</h2>

@if (@Model.Count == 0)
{
  <h4>No vendors have been added!</h4>
}
<ul>
  @foreach (Vendor vendor in Model)
  {
    <li><a href="/vendors/@vendor.Id">@vendor.Name</a></li>
  }
</ul>

<a href="/vendors/new">Add New Vendor</a>
<a href="/">Home</a>

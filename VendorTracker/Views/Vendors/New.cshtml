@{
  Layout = "_Layout";
}

<h1>Add New Vendor</h1>
<h4>Fill out the form below to create a new vendor</h4>

<form action="/vendors" method="post">
  <div class="form-group">
    <label for="vendorName">Name</label>
    <input class="form-control col-6" id="vendorName" name="vendorName" type="text">
  </div>
  <div class="form-group">
    <label for="vendorDescription">Description</label>
    <input class="form-control col-6" id="vendorDescription" name="vendorDescription" type="text">
  </div>
  <button type="submit" class="btn btn-success">Add</button>
</form>

<a href="/vendors">Back to vendors</a>

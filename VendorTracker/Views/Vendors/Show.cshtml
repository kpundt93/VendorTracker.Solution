@using VendorTracker.Models;

<h1>Vendor Orders</h1>
<h2>@Model["vendor"].Name</h2>
<h3>Order History</h3>
@if (@Model["vendor"].Orders.Count == 0)
{
  <p>This vendor hasn't placed any orders.</p>
}
<ul>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Date : @order.Title</a></li>
  }
</ul>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add new order</a></p>
<p><a href="/vendors">Return to vendor list</a></p>
<p><a href="/">Home</a></p>
@using VendorTracker.Models;
@{
  Layout = "_Layout";
}

<h1>Vendor Orders</h1>
<h2>@Model["vendor"].Name</h2>
<h4>Order History</h4>
@if (@Model["vendor"].Orders.Count == 0)
{
  <p>This vendor hasn't placed any orders.</p>
}
<ul>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Date: @order.Title</a></li>
  }
</ul>

<a href='/vendors/@Model["vendor"].Id/orders/new'>Add new order</a>
<a href="/vendors">Return to vendor list</a>
<a href="/">Home</a>
<h1>New Order</h1>
<h2>Create a new order for @Model.Name</h2>

<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="orderTitle">Title</label>
  <input id="orderTile" name="orderTitle" type="text" required>
  <br>
  <label for="orderDescription">Description</label>
  <input id="orderDescription" name="orderDescription" type="text" required>
  <br>
  <label for="orderPrice">Price</label>
  <input id="orderPrice" name="orderPrice" type="number" min="0.00" step="0.01" placeholder="0.00" required>
  <br>
  <label for="orderDate">Date</label>
  <input id="orderDate" name="orderDate" type="date" placeholder="YYYY-MM-DD" required>
  <br>
  <button type="submit">Add order</button>
</form>